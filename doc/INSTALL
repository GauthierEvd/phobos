# if accessing tapes, install:
yum install lin_tape
modprobe lin_tape
ls -l /dev/IBMtape*
yum install ltfssde

# install phobos and requirements
yum install phobos

service postgresql-9.4 initdb
service postgresql-9.4 start

# If you upgrade from phobos 1.0.x, run the DB conversion script
# (edit it to set the right DB name and password)
/usr/sbin/pho_convert_db
# 'y' to confirm

# Edit '/var/lib/pgsql/9.4/data/pg_hba.conf'
# to authorize access to localhost:

	# "local" is for Unix domain socket connections only
	local   all             all                                     trust
	# IPv4 local connections:
	host    all             all             127.0.0.1/32            md5
	# IPv6 local connections:
	host    all             all             ::1/128                 md5

# and restart DB
service postgresql-9.4 restart

# create phobos DB and tables
pho_dss_helper setup_db
pho_dss_helper setup_tables

# play!
phobos drive add --unlock /dev/IBMtape0
phobos tape add -t lto6 [073200-073222]L6
phobos tape format 073200L6 --unlock
phobos put <file> <id> -m <k=v,k=v,...>
